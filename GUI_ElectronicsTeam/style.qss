    background-color: #222222;
    height: 30px;
    border-radius: 16px;
    border: 2px solid #e0e4e7;
    color: #ffffff;
    
}


/* BUTTONS DEVICE TOGGLE */
QPushButton#button_toggle_psu_enable, #button_toggle_pg_enable, #button_toggle_3pac_enable {
    background-color: #FF595E;
